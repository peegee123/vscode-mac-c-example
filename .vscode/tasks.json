{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "clang++",
            "args": [
                "-Wall",
                "-o",
                "helloworld",
                "helloworld.c",
                "-g",
                "-v"
            ],
            "isShellCommand": true,
            "showOutput": "always",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}